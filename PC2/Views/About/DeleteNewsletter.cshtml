@model PC2.Models.NewsletterFile

@{
    ViewData["Title"] = "Delete Newsletter";
}

<h1>Delete @Model.Name</h1>

<h3>Are you sure you want to delete @Model.Name?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Model.Name
        </dt>
    </dl>
    
    <form asp-action="DeleteNewsletter">
        <input type="hidden" asp-for="NewsletterId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="UploadNewsletter">Back to List</a>
    </form>
</div>
