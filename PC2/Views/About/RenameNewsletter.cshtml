@model PC2.Models.NewsletterFile

@{
    ViewData["Title"] = "Rename Newsletter";
}

<h1>Rename @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RenameNewsletter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsletterId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UploadNewsletter">Back to List</a>
</div>